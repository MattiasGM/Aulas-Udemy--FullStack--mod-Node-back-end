<div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
        <h1 class="text-center">Criar conta ou Logar</h1>
        <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

        <!-- Mensagem de erro -->
        <!-- <div class="row my-3"> 
            <div class="col">
                <div class="alert alert-danger">Um erro qualquer</div>
            </div>
        </div> -->

        <div class="row">
            <div class="col-lg mx-5">
                <h3>Faça seu cadastro</h3>

                <form action="/login/register" method="POST">
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                      <label>Senha</label>
                      <input type="password" class="form-control" name="password" placeholder="Senha">
                    </div>
                    <div class="form-group">
                      <label>Confirmar Senha</label>
                      <input type="password" class="form-control" name="passwordConfirm" placeholder="Repita sua senha">
                    </div>
                    <button type="submit" class="btn btn-primary my-2">Registrar</button>
                </form>

            </div>

            <div class="col-lg mx-5">
                <h3>Entrar no sistema</h3>

                <form action="/login/login" method="POST">
                    <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                    <div class="form-group">
                      <label>Email</label>
                      <input type="email" class="form-control" name="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                      <label>Senha</label>
                      <input type="password" class="form-control" name="password" placeholder="Senha">
                    </div>
                    <button type="submit" class="btn btn-primary my-2">Entrar</button>
                </form>

            </div>
        </div>

    </div>



    <div class="col-lg-2"></div>
</div>
